<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="theme-color" content="#111216"/>
    <title>{{ title or metadata.title }}</title>
    <link rel="icon" href="favicon.ico">
    <link rel="apple-touch-icon" href="/img/apple-icon.png">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    {% set css %}
    {% include "css/index.css" %}
    {% include "css/prism-base16-monokai.dark.css" %}
    {% endset %}
    <style>
      {{css | cssmin | safe}}
    </style>
  </head>
  <body>
    <div class="container">
      <header{% if headerClass %} class="{{ headerClass  }}"{% endif %}>
        <h1 class="logo">
          <a href="{{ '/' | url }}">
            <img src="/img/logo.svg" width="60px" height="60px" alt="logo"/>
          </a>
        </h1>
        <nav class="nav">
          {%- for entry in collections.all | eleventyNavigation %}
            <div class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </div>
          {%- endfor %}
        </nav>
      </header>
      <main{% if mainClass %} class="{{ mainClass }}"{% endif %}>
        {{ content | safe }}
      </main>
    </div>
  </body>
</html>